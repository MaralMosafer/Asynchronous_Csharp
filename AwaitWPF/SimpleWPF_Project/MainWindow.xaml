<Window x:Class="SimpleWPF_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleWPF_Project"
        mc:Ignorable="d"
        Background="Black"
        Title="Maral Mosafer" Height="450" Width="450">
    <Grid>
        <StackPanel Margin="30" Background="CadetBlue">
            <Label Content="Understanding Asynchronous Programming" Foreground="DimGray" FontWeight="Bold"></Label>
            <Button x:Name="SynchBtn" Content="Synch" Click="SynchBtn_Click" Margin="20" Background="DimGray" Foreground="White">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button x:Name="AsynchBtn" Content="Asynch" Click="AsynchBtn_Click" Margin="20 0" Background="DimGray" Foreground="White">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Border Margin="30" BorderBrush="DimGray" BorderThickness="3">
                <TextBlock Margin="8" Name="txt"></TextBlock>
            </Border>
        </StackPanel>
    </Grid>
</Window>
